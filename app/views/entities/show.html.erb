<p id="notice"><%= notice %></p>
<div class="user-header col-small-12"  style="background-image:   url(<%= asset_url('overlay.png') %>), url(<%= asset_url('signal.jpg')%>); background-size: 100%">
  <div class="user-header-content">
    <h1><%= @entity.name %></h1>
    <h2><%= @entity.email %></h2>
  </div>
  <div class="user-image">
    <%= image_tag(@entity.image.url(:square), class: 'user-img') %>
  </div>
</div>

<% if @entity.activities.any? %>
  <p>
  <h2>Atividades:</h2>
    <%= render @entity.activities %>
  </p>
<% end %>

<% if @entity.owned_paths.any? %>
  <p>
  <h2>Owned Paths:</h2>
    <%= render @entity.owned_paths %>
  </p>
<% end %>

<%= link_to 'Edit', edit_entity_path(@entity) %> |
<%= link_to 'Back', entities_path %>
