<p id="notice"><%= notice %></p>

<h1>Listing Certificates</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Owner</th>
      <th>Grade</th>
      <th>Paid</th>
      <th>Public comment</th>
      <th>Private commente</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.provider_id %></td>
        <td><%= certificate.owner_id %></td>
        <td><%= certificate.grade %></td>
        <td><%= certificate.paid %></td>
        <td><%= certificate.public_comment %></td>
        <td><%= certificate.private_comment %></td>
        <td><%= certificate.activity_id %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

