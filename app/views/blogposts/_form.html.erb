<%= form_for @blogpost, html: { multipart: true , class: "form-horizontal"} do |f| %>
  <% if @blogpost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blogpost.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @blogpost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label "Título", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Subtítulo", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Link do post", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Link da imagem", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group no-padding">
    <%= f.label "Conteúdo", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "note-editor note-codable col-xs-12 ", 'data-provide'=>"markdown"  %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit "Salvar",  class: "btn btn-primary btn-outline pull-right" %>
    </div>
  </div>
<% end %>