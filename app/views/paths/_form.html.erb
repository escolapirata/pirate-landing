    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, @entities, :id, :name, {include_blank: false}, {multiple: false} %>
  </div>
  <div class="field">
    <%= f.label :creator_id %><br>
    <%= f.collection_select :creator_id, @entities, :id, :name, {include_blank: false}, {multiple: false} %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
